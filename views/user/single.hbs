
<!-- banner -->

<div class="banner ">
	
	<div class="agileinfo_single">

		
		<div class="col-md-4 agileinfo_single_left">
			<img width="270px" height="270px" style="margin-left: 10px;" id="example" src="/productImage/{{productDetails._id}}1.jpg" alt=" "
				class="img-responsive" />
		</div>
		<div class="col-md-8 agileinfo_single_right">
			<img onclick="image('/productImage/{{productDetails._id}}1.jpg')" id="image1" width="75" height="75px"
				src="/productImage/{{productDetails._id}}1.jpg" alt="">
			<img onclick="image('/productImage/{{productDetails._id}}2.jpg')" id="image2" width="75" height="75px"
				src="/productImage/{{productDetails._id}}2.jpg" alt="">
			<img onclick="image('/productImage/{{productDetails._id}}3.jpg')" id="image3" width="75" height="75px"
				src="/productImage/{{productDetails._id}}3.jpg" alt="">
			<img onclick="image('/productImage/{{productDetails._id}}4.jpg')" id="image4" width="75" height="75px"
				src="/productImage/{{productDetails._id}}4.jpg" alt="">
		</div>
		<div class=" agileinfo_single_right">

		<div class=" col-md-8 w3agile_description">
			<span style="color: #fab005;">{{productDetails.Brand}}</span>
			<span  style="color: #989898; ">{{productDetails.Name}}</span>
			<br>
			<span style="color: #fab005;">Net quantity</span>
			
			<span style="font-size: 12px;color: #989898;">{{productDetails.Quantity}}</span>
			<h4>Description :</h4>
			<p>Excepteur sint occaecat cupidatat non proident, sunt in culpa qui
				officia deserunt mollit anim id est laborum.Duis aute irure dolor in
				reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla
				pariatur.</p>
		</div>

		<div class="snipcart-item block">
			<div class="snipcart-thumb agileinfo_single_right_snipcart">
				<h4>Rs: {{productDetails.Price}}</h4>
			</div>
			<div class="snipcart-details agileinfo_single_right_details">				
						<button onclick="addToCart('{{productDetails._id}}')" class="btn btn-danger">Add to cart</button>		
			</div>
		</div>
	</div>

	<div class="clearfix"> </div>
</div>


</div>

<script>
	function image(data) {
		document.getElementById('example').src = data
	}
</script>
