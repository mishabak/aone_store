{{!-- <div class="product"> --}}
	<div class="container">
		<div class="spec ">
			<h3>{{productCategory}}</h3>
			<div class="ser-t">
				<b></b>
				<span><i></i></span>
				<b class="line"></b>
			</div>
		</div>
		<div class=" con-w3l">
			{{#each relatedProducts}}

			<div class="col-md-3 pro-1">
				<div style="box-shadow: 0px 0px 14px 2px #d2d2d2;  border-radius: 10px; border: none;" class="col-m">
					<a href="/single-view/{{this._id}}" data-toggle="modal"  class="offer-img">
						<img height="100px" src="/productImage/{{this._id}}1.jpg" class="img-responsive" alt="">
					</a>
					<div class="mid-1">
						<div class="women">
							<h6>{{this.Name}}({{this.Quantity}})</h6>
						</div>
						<div class="mid-2">
							<p><label></label><em class="item_price">Rs: {{this.Price}}</em></p>
							{{!-- <div class="block">
								<div class="starbox small ghosting"> </div>
							</div> --}}
							<div class="clearfix"></div>
						</div>
						<div class="add add-2">
							
							<button onclick="addToCart('{{this._id}}')" class="btn btn-danger my-cart-btn my-cart-b" data-id="1" data-name="product 1"
								data-summary="summary 1" data-price="6.00" data-quantity="1"
								data-image="images/of16.png">Add to Cart</button>
						</div>
					</div>
				</div>
