<div class="product">
	<div class="container">
		<div id="categoryName" class="spec ">
			<h3 style="text-transform: capitalize;">{{currentCategory}}</h3>
			<div class="ser-t">
				<b></b>
				<span><i></i></span>
				<b class="line"></b>
			</div>
		</div>

		<div  class=" con-w3l">
			{{#each products}}
			<div class="  col-md-3 pro-1 pro-61">
				
				<div style="box-shadow: 0px 0px 14px 2px #d2d2d2;  border-radius: 10px; border: none;" class="col-m">	
					<div style="position: relative;">
						{{#if this.Offer}}
						<img style="width: 73px; height: 73px; position: absolute;  z-index: 15;" src="\images\edited-offer-removebg-preview.png" alt="">
						<div  style=" position: absolute; margin-top: 24px; margin-left: 4px; color: white; font-size: 14px;	 z-index: 16;" class="a123123">{{this.Offer}}% off</div>
						{{/if}}
			        
					
					{{!-- data-target="#myModal17" --}}
					<a  href="/single-view/{{this._id}}" data-toggle="modal"  class="offer-img">
						<img src="/productImage/{{this._id}}1.jpg" class="img-responsive" alt="">
					</a>
					<div class="mid-1 ">
						<div class="women ">
							<h6 style="text-align: center; text-transform: capitalize;" ><a  href="#">{{this.Name}}</a>({{this.Quantity}})</h6>
						</div>
						<div  class="mid-2">
							{{#if this.Offer}}
							<p   ><label></label><em class="item_price"><del>Rs: {{this.Actual_Price}}</del></em></p>
							<p   ><label></label><em class="item_price">Rs: {{this.Price}}</em></p>
							{{else}}
							<p   ><label></label><em class="item_price">Rs: {{this.Price}}</em></p>
							{{/if}}
							
							<div class="clearfix "></div>
						</div>
						<div class="add add-2">
							
							<button onclick="addToCart('{{this._id}}')" class="btn btn-danger my-cart-btn my-cart-b" data-id="1" data-name="product 1"
								data-summary="summary 1" data-price="6.00" data-quantity="1"
								data-image="images/of16.png">Add to Cart</button>
						</div>
					</div>

					</div>
				</div>
			</div>

			{{/each}}
			
			
			<div class="clearfix"></div>
		</div>
	</div>
</div>




